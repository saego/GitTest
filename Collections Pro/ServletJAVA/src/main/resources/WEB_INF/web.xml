<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">
    <display-name>
        Application Servlet
    </display-name>
    <description>
        This application for get current time
    </description>
    <servlet>
        <servlet-name>Form</servlet-name>
        <servlet-class>ua.java.servlets.FormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Clock</servlet-name>
        <servlet-class>ua.java.servlets.ClockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Form</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Clock</servlet-name>
        <url-pattern>/clock</url-pattern>
    </servlet-mapping>
</web-app>